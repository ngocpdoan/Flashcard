<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="359dp"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"

        android:gravity="center"
        android:text="What’s the shortcut for “copy”?"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="288dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="507dp"
        android:background="#FFC107"
        android:backgroundTint="#90FFC107"
        android:gravity="center"
        android:text="CTRL + C"
        android:textSize="30sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="25dp"
        android:visibility="visible"
        android:background="@drawable/ic_iconmonstr_plus_circle_thin" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_iconmonstr_angel_right_circle_thin" />

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="520dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_iconmonstr_x_mark_circle_thin" />

</RelativeLayout>